{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "runtimeExecutable": "php",
      "runtimeArgs": [
        "-S",
        "localhost:8000",
        "-t",
        "${workspaceFolder}"
      ],
      "program": "${file}",
      "cwd": "${workspaceFolder}"
    }
  ]
}
